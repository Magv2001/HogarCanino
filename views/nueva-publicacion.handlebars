<main class="contenedor">
    <form action="/publicaciones/nueva" method="POST" class="default-form" enctype="multipart/form-data">
        <h3>Información General</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: ¡Buscando un hogar amoroso! Perro en adopción">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Sube una imagen de un perro o perra">
        </div>
        <div class="campo">
            <label>Raza</label>
            <input type="text" name="raza" placeholder="Ej: Mestizo, Cooker">
        </div>
        <div class="campo">
            <label>Tamaño</label>
            <select name="tamano">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Grande">Grande</option>
                <option value="Mediano">Mediano</option>
                <option value="Mediana">Mediana</option>
                <option value="Pequeño">Pequeño</option>
                <option value="Pequeña">Pequeña</option>
            </select>
        </div>
        <div class="campo">
            <label>Sexo</label>
            <input type="text" name="sexo" placeholder="Ej: Masculino, Macho">
        </div>
        <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: Norte de Quito, Calderón">
        </div>
        <h3>Descripción de la publicación</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Historial Médico</h3>

        <ul class="lista-historial">
            {{#seleccionarHistorial a}}
            {{/seleccionarHistorial}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="historial" id="historial">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>