<main class="contenedor">
    <form action="/publicaciones/denuncia" method="POST" class="default-form">
        <h3>Datos del Formulario</h3>

        <div class="campo">
            <label>Título Publicación</label>
            <input type="text" name="titulo" placeholder="Ej: Escriba el título de la publicación">
        </div>
        <div class="campo">
            <label>E-mail (Creador/ra)</label>
            <input type="email" id="email" name="email" placeholder="Ej: Correo de la persona creadora de la publicación">
        </div>
        <div class="campo">
            <label>Tipo de Infracción</label>
            <select name="infraccion">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Crueldad Animal">Crueldad Animal</option>
                <option value="Explotacion Animal">Explotación Animal</option>
                <option value="Fraude o estafa">Fraude o estafa</option>
                <option value="Contenido inapropiado">Contenido inapropiado</option>
                <option value="Publicidad falsa">Publicidad falsa</option>
                <option value="Discriminacion">Discriminación</option>
                <option value="Incitacion a la violencia">Incitación a la violencia</option>
            </select>
        </div>
        <h3>Razón de la Denuncia</h3>
        <div class="campo descripcion">
            <label>Explique la razón de la denuncia</label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <div class="campo acciones">
            <a href="/">Volver al Inicio</a>
        </div>

        <div class="campo centrar-horizontal">
            <input type="submit" value="Enviar Denuncia" class="btn btn-azul">
        </div>
    </form>
</main>